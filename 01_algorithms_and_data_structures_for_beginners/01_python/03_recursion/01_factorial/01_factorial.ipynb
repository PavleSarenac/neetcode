   "source": [
    "# Recursive implementation of n! (n-factorial) calculation\n",
    "def factorial(n):\n",
    "    # Base case: n = 0 or 1\n",
    "    if n <= 1:\n",
    "        return 1\n",
    "\n",
    "    # Recursive case: n! = n * (n - 1)!\n",
    "    return n * factorial(n - 1)"
   ]
  }
